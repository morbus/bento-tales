{
    "require": {
        "php": ">=8.2",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-zip": "*",
        "ext-zlib": "*",
        "bramus/monolog-colored-line-formatter": "^3.1",
        "team-reflex/discord-php": "^7.3",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.26"
    },
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "bot:start": [
            "Composer\\Config::disableProcessTimeout",
            "php start.php"
        ],
        "cs:check": "vendor/bin/php-cs-fixer fix --verbose --dry-run",
        "cs:fix": "vendor/bin/php-cs-fixer fix --verbose"
    },
    "scripts-descriptions": {
        "bot:start": "Start the Bento Tales bot",
        "cs:check": "Check coding standards",
        "cs:fix": "Fix coding standards"
    }
}
