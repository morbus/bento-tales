{
    "require": {
        "php": ">=8.2",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-zip": "*",
        "ext-zlib": "*",
        "bramus/monolog-colored-line-formatter": "^3.1",
        "team-reflex/discord-php": "^7.3",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.26",
        "phpmd/phpmd": "^2.13",
        "phpstan/phpstan": "^1.10"
    },
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "bot:start": [
            "Composer\\Config::disableProcessTimeout",
            "@php start.php"
        ],
        "check-code": [
            "@cs:check",
            "@phpmd",
            "@phpstan"
        ],
        "cs:check": "vendor/bin/php-cs-fixer fix --verbose --diff --dry-run",
        "cs:fix": "vendor/bin/php-cs-fixer fix --verbose",
        "phpmd": "vendor/bin/phpmd . ansi cleancode,codesize,controversial,design,naming --exclude .idea/*,vendor/*",
        "phpstan": "vendor/bin/phpstan analyse --level 7 *.php src"
    },
    "scripts-descriptions": {
        "bot:start": "Start the Bento Tales bot",
        "check-code": "Check code with all tools",
        "cs:check": "Check coding standards with PHP-CS-Fixer",
        "cs:fix": "Fix coding standards with PHP-CS-Fixer",
        "phpmd": "Check code with PHP Mess Detector",
        "phpstan": "Check code with PHPStan"
    }
}
